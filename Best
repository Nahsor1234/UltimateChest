    while attempts < 60 do -- Try for 60 seconds
        if Player.Team and Player.Team.Name == "Pirates" then break end
        
        pcall(function()
            ReplicatedStorage.Remotes.CommF_:InvokeServer("SetTeam", "Pirates")
        end)
        
        if Player.Team and Player.Team.Name == "Pirates" then break end
        attempts = attempts + 1
        task_wait(1)
    end
end)

